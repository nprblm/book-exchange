<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.home.ItemActivity"
    android:id="@+id/item_activity"
    android:background="@color/dark_grey"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/open_sans_italik"
                android:text="Product Name"
                android:textAlignment="center"
                android:textColor="@color/orange"
                android:textSize="20sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/product_image_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:id="@+id/product_image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_add_image_white_240" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/description_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/product_image_card"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/open_sans_italik"
                    android:text="Product Description"
                    android:textAlignment="textStart"
                    android:textColor="@color/light_grey"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/city_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/description_text"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/open_sans_italik"
                    android:text="City:"
                    android:textAlignment="textStart"
                    android:textColor="@color/light_grey"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/date_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/description_text"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/open_sans_italik"
                    android:text="Time:"
                    android:textAlignment="textEnd"
                    android:textColor="@color/light_grey"
                    android:textSize="14sp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal">

                <Button
                    android:id="@+id/contact_button"
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/green"
                    android:fontFamily="@font/open_sans_regular"
                    android:text="▼ Show contact info ▼"
                    android:textColor="@color/dark_grey" />

                    <LinearLayout
                        android:id="@+id/contact_layout"
                        android:layout_width="380dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_horizontal"

                        android:visibility="visible">

                        <com.google.android.material.imageview.ShapeableImageView
                            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
                            android:id="@+id/profile_image"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:adjustViewBounds="true"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_defoult_profile_240" />

                        <LinearLayout
                        android:id="@+id/contact_phone_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                            android:layout_gravity="center"
                        android:visibility="visible">

                            <LinearLayout
                                android:layout_width="300dp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="10dp">

                                <ImageView
                                    android:id="@+id/profile_icon"
                                    android:layout_width="25dp"
                                    android:layout_height="wrap_content"
                                    android:adjustViewBounds="true"
                                    android:scaleType="fitCenter"
                                    android:src="@drawable/ic_profile_white_96" />

                                <TextView
                                    android:id="@+id/contact_name_text"
                                    android:layout_width="260dp"
                                    android:layout_height="25dp"
                                    android:layout_marginLeft="10dp"
                                    android:fontFamily="@font/open_sans_italik"
                                    android:text="Name"
                                    android:textColor="@color/orange"
                                    android:textSize="16sp"
                                    android:layout_gravity="center_vertical"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="300dp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="10dp">

                                <ImageView
                                    android:id="@+id/phone_icon"
                                    android:layout_width="25dp"
                                    android:layout_height="wrap_content"
                                    android:adjustViewBounds="true"
                                    android:scaleType="fitCenter"
                                    android:src="@drawable/ic_phone_white_96" />

                                <TextView
                                    android:id="@+id/contact_phone_number_text"
                                    android:layout_width="260dp"
                                    android:layout_height="25dp"
                                    android:layout_marginLeft="10dp"
                                    android:fontFamily="@font/open_sans_italik"
                                    android:text="Phone number"
                                    android:textColor="@color/orange"
                                    android:textSize="16sp"
                                    android:layout_gravity="center_vertical"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:id="@+id/tg_layout"
                                    android:layout_width="300dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginLeft="10dp">

                                    <ImageView
                                        android:id="@+id/tg_icon"
                                        android:layout_width="25dp"
                                        android:layout_height="wrap_content"
                                        android:adjustViewBounds="true"
                                        android:scaleType="fitCenter"
                                        android:src="@drawable/ic_tg_white_96" />

                                    <TextView
                                        android:id="@+id/tg_text"
                                        android:layout_width="260dp"
                                        android:layout_height="25dp"
                                        android:layout_marginLeft="10dp"
                                        android:fontFamily="@font/open_sans_italik"
                                        android:text="Tg link"
                                        android:textColor="@color/orange"
                                        android:textSize="16sp"
                                        android:layout_gravity="center_vertical"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/fb_layout"
                                    android:layout_width="300dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginBottom="10dp">

                                    <ImageView
                                        android:id="@+id/fb_icon"
                                        android:layout_width="25dp"
                                        android:layout_height="wrap_content"
                                        android:adjustViewBounds="true"
                                        android:scaleType="fitCenter"
                                        android:src="@drawable/ic_fb_white_96" />

                                    <TextView
                                        android:id="@+id/fb_text"
                                        android:layout_width="260dp"
                                        android:layout_height="25dp"
                                        android:layout_marginLeft="10dp"
                                        android:fontFamily="@font/open_sans_italik"
                                        android:text="Fb link"
                                        android:textColor="@color/orange"
                                        android:textSize="16sp"
                                        android:layout_gravity="center_vertical"/>

                                </LinearLayout>

                            </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/delete_button"
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/red"
                    android:fontFamily="@font/open_sans_regular"
                    android:text="Delete"
                    android:textColor="@color/dark_grey"
                    android:visibility="visible"/>

                    <LinearLayout
                        android:id="@+id/delete_layout"
                        android:layout_width="380dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/message"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/open_sans"
                            android:text="Are you sure?"
                            android:textAlignment="center"
                            android:textColor="@color/light_grey"
                            android:textSize="20sp" />

                        <LinearLayout
                            android:layout_width="380dp"
                            android:layout_height="100dp"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/yes_button"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/red"
                                android:fontFamily="@font/open_sans_regular"
                                android:text="Yes"
                                android:textColor="@color/dark_grey"
                                android:visibility="visible"
                                android:layout_marginLeft="60dp"/>

                            <Button
                                android:id="@+id/no_button"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/green"
                                android:fontFamily="@font/open_sans_regular"
                                android:text="No"
                                android:textColor="@color/dark_grey"
                                android:visibility="visible"
                                android:layout_marginLeft="60dp"/>
                        </LinearLayout>
                    </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>